{
   "name": "node-typescript-simple-minimal-boilerplate",
   "version": "1.0.0",
   "description": "A simple to using, clean and minimal Node.js & TypeScript boilerplate enforcing code formatting and linting",
   "main": "dist/index.js",
   "engines": {
      "node": ">=14.15.4",
      "npm": ">=6.14"
   },
   "engineStrict": true,
   "scripts": {
      "start": "ts-node src/index.ts",
      "dev": "nodemon",
      "build": "rimraf ./build && tsc",
      "lint": "eslint . --ext .ts",
      "lint:fix": "eslint . --ext .ts --fix",
      "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
      "test": "echo \"Error: no test specified\" && exit 1"
   },
   "keywords": [],
   "author": "Ashok Dey",
   "license": "MIT",
   "devDependencies": {
      "@types/compression": "^1.7.0",
      "@types/dotenv": "^8.2.0",
      "@types/node": "^8.10.66",
      "@types/validator": "^13.1.3",
      "@typescript-eslint/eslint-plugin": "^4.13.0",
      "@typescript-eslint/parser": "^4.13.0",
      "eslint": "^7.17.0",
      "eslint-plugin-no-loops": "^0.3.0",
      "husky": "^4.3.8",
      "nodemon": "^2.0.7",
      "prettier": "^2.2.1",
      "rimraf": "^3.0.2",
      "ts-node": "3.3.0",
      "typescript": "3.3.3333"
   },
   "husky": {
      "hooks": {
         "pre-commit": "npm run format",
         "pre-push": "npm run lint && npm run lint:fix"
      }
   },
   "dependencies": {
      "@overnightjs/core": "^1.7.5",
      "@types/cors": "^2.8.9",
      "@types/express": "^4.17.11",
      "@types/helmet": "^4.0.0",
      "@types/morgan": "^1.9.2",
      "compression": "^1.7.4",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "helmet": "^4.3.1",
      "morgan": "^1.10.0",
      "mysql2": "^2.2.5",
      "reflect-metadata": "^0.1.10",
      "sequelize": "^6.4.0",
      "sequelize-typescript": "^2.0.0"
   }
}
