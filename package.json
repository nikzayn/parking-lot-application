{
  "name": "node-typescript-simple-minimal-boilerplate",
  "version": "1.0.0",
  "description": "A simple to using, clean and minimal Node.js & TypeScript boilerplate enforcing code formatting and linting",
  "main": "dist/index.js",
  "engines": {
    "node": ">=12.20.1",
    "npm": ">=3.10.0"
  },
  "engineStrict": true,
  "scripts": {
    "start": "npm run build && node build/index.js",
    "dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Ashok Dey",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "husky": "^4.3.8",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier",
      "pre-push": "npm run lint && npm run lint:fix"
    }
  },
  "dependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "morgan": "^1.10.0"
  }
}
